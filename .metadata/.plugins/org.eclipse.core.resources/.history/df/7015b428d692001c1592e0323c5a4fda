package com.mycompany.dataaccess;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;
import javax.persistence.Query;

import com.mycompany.entity.EmpPrimarySkill;

public class EmployeePrimarySkillDataAccess {

	private static EntityManager em;
	private static EntityManagerFactory emf = Persistence.createEntityManagerFactory("PrimarySkillPU");


	private static String getEmployeePrimarySkill(int empId) {
		
		em = emf.createEntityManager();

		em.getTransaction().begin();

		Query q = em.createQuery("select ep from EmpPrimarySkill eps");
		EmpPrimarySkill e = (EmpPrimarySkill) q.getSingleResult();

		return e.getPrimarySkill();

	}

}
